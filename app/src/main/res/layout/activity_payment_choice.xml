<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Activity.PaymentChoiceActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/payment_question"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic|bold"
        android:layout_marginTop="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/accept_payment"
            style="@style/orange_submit_button"
            android:layout_marginTop="20dp"
            android:text="@string/accept_payment"
            android:textSize="21sp"/>

        <TextView
            android:id="@+id/proceed_payment"
            style="@style/orange_submit_button"
            android:layout_marginTop="20dp"
            android:text="@string/proceed_payment"
            android:textSize="21sp"/>

    </LinearLayout>

</LinearLayout>