<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.Fragment.TransactionDetailsFragment"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/transaction_details_header"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/transfert_details_label"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#99000000"
                android:textSize="16sp"
                android:text="@string/transaction_details_message"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="0.80"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/receiver_label"
                android:textColor="@color/gray_text_profile"
                android:textSize="18dp"
                android:id="@+id/receiver_label"
                android:textStyle="bold"
                android:layout_toLeftOf="@id/receiver"/>

            <EditText
                style="@style/signin_edittext_style"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:hint="First name"
                android:text="Justin Bienvenu"
                android:id="@+id/receiver"
                android:gravity="center_horizontal"
                android:focusable="false"
                android:singleLine="false"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.80"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/amount_fees_total_label"
                android:textColor="@color/gray_text_profile"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_toLeftOf="@id/receiver"
                android:layout_marginTop="12dp"/>

            <EditText
                style="@style/signin_edittext_style"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:hint="First name"
                android:text="Justin Bienvenu"
                android:id="@+id/amount_fees"
                android:gravity="center_horizontal"
                android:focusable="false"
                android:textColor="#CC000000"
                android:textStyle="normal" />

            <EditText
                style="@style/signin_edittext_style"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:hint="First name"
                android:text="Justin Bienvenu"
                android:id="@+id/total"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:focusable="false"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.80"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/message_label"
                android:textColor="@color/gray_text_profile"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CC000000"
                android:textStyle="normal"
                android:textSize="16sp"
                android:id="@+id/transaction_message"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#99000000"
                android:textStyle="italic"
                android:textSize="16sp"
                android:text="@string/transaction_details_message"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/proceed"
                    style="@style/orange_submit_button"
                    android:layout_width="wrap_content"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    android:layout_height="50dp"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:text="@string/proceed"
                    android:layout_marginRight="12dp"/>

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:text="@string/cancel"
                    android:id="@+id/cancel"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_toLeftOf="@id/proceed"
                    android:layout_marginRight="8dp"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>