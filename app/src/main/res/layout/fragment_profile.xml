<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="0.80"
                android:gravity="center"
                android:padding="5dp"
                android:text="First name"
                android:textColor="@color/gray_text_profile"
                android:textSize="18dp"
                android:textStyle="bold" />


            <EditText

                style="@style/signin_edittext_style"
                android:layout_marginTop="5dp"
                android:hint="First name"
                android:text="Justin Bienvenu"
                android:id="@+id/firstname"
                android:focusable="false"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="0.80"
                android:gravity="center"
                android:padding="5dp"
                android:text="Last name"
                android:textColor="@color/gray_text_profile"
                android:textSize="18dp"
                android:textStyle="bold" />


            <EditText
                style="@style/signin_edittext_style"
                android:layout_marginTop="5dp"
                android:hint="Last name"
                android:text="Lock Bang"
                android:id="@+id/lastname"
                android:focusable="false"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_alignParentRight="true"
                    android:id="@+id/addmobile"
                    android:text="@string/add"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@id/addmobile"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.80"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="Mobile number"
                    android:textColor="@color/gray_text_profile"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mobiles"
                android:layout_marginTop="5dp">

            </android.support.v7.widget.RecyclerView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="0.80"
                android:gravity="center"
                android:padding="5dp"
                android:text="Email"
                android:textColor="@color/gray_text_profile"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        style="@style/signin_edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/tvVerifyEmail"
                        android:gravity="center_vertical"
                        android:hint="Add Email"
                        android:id="@+id/etEmail"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:focusable="false"/>

                    <TextView
                        android:id="@+id/tvVerifyEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="Verified"
                        android:textColor="@android:color/holo_green_light"
                        android:textStyle="italic|bold" />
                </RelativeLayout>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="0.80"
                android:gravity="center"
                android:padding="5dp"
                android:text="PIN"
                android:textColor="@color/gray_text_profile"
                android:textSize="18dp"
                android:textStyle="bold" />


            <EditText
                style="@style/signin_edittext_style"
                android:layout_marginTop="5dp"
                android:hint="Pin"
                android:inputType="numberPassword"
                android:text="xxxx"
                android:id="@+id/etPin"
                android:focusable="false"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="0.80"
                android:gravity="center"
                android:padding="5dp"
                android:text="Password"
                android:focusable="false"
                android:textColor="@color/gray_text_profile"
                android:textSize="18dp"
                android:textStyle="bold" />


            <EditText
                style="@style/signin_edittext_style"
                android:layout_marginTop="5dp"
                android:hint="Pin"
                android:text="xxxxxx"
                android:focusable="false"
                android:inputType="textPassword"
                android:id="@+id/etPass"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgNext"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow"/>


        </LinearLayout>

    </ScrollView>



</RelativeLayout>